{
  "name": "tor-with-auth-tests",
  "private": true,
  "config": {
    "image": "tor-with-auth",
    "goss": "v0.3.5"
  },
  "scripts": {
    "postinstall": "tests/goss/install.sh $npm_package_config_goss node_modules/.bin",
    "build": "docker build --no-cache -t $npm_package_config_image .",
    "goss": "GOSS_FILES_PATH=tests/goss GOSS_OPTS='--color -f rspecish' dgoss run $npm_package_config_image",
    "pretest": "npm run build && npm run goss",
    "test": "cucumber-js tests/features"
  },
  "dependencies": {
    "cucumber": "^4.2.1",
    "debug": "^3.1.0"
  }
}
